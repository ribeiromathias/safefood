<div class="restaurant-banner text-center p-3 bg-white mb-3 m-3">
  <div class="card-product-image"> 
    <%= cl_image_tag(@restaurant.photo.key, width: 150)%>
  </div>
  <!-- <%#= cl_image_tag(@restaurant.photo.key) %> -->
  <h1 class="h3 pt-3 pb-0"><%= @restaurant.name %></h1>
</div>


<div class="cards m-3">
  <% @meals.each do |meal| %>
    <%= link_to meal, class: "card-product" do %>
      <div class="card-product-image">
        <%= cl_image_tag(meal.photo.key, crop: :fill, width: 100, height: 100) %>
      </div>  
      <div class="card-product-infos">
        <h2><%= meal.name %></h2>
        <p><strong>Price: </strong> $<%= meal.offer_price %>,00 </p>
        <p> <strong>Click for description</p>

      </div>
    <% end %>
  <% end %>
</div>
