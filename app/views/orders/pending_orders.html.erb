 <% if @pending_orders.any? %>

<div class="orders-details mb-3">
  <h3 class="text-center">Pending orders</h3>
    <div class="text-center">
      <div class="order-tags d-flex space-around">
        <h5 class="py-3">Qt.</h5>
        <h5 class="py-3">Items</h5>
        <h5 class="py-3">Price</h5>  
      </div>
      <% @pending_orders.each do |pending_order| %>
      <ul> 
        <% pending_order.order_items.each do |order_item| %>
          <li class="pb-3 d-flex meal-line"> <%= "#{order_item.quantity}"%> <strong> <%= "#{order_item.meal.name}"%> </strong> <%= "$#{order_item.price},00" %> </li>
        <% end %>
      </ul>
        <div class="payment d-flex justify-content-center pb-3 pt-1">
          <h6 class="total-color text-center">Total $<%= pending_order.price %>,00</h6>
        </div>
        <div>
          <%= link_to "Cancel", order_path(pending_order, status: "cancelled"), method: :patch,  class: "d-flex keep-btn p-1 w-50 my-3" %>
        </div>
        <div class="d-flex justify-content-center m-1 p-0 ">
        <%= link_to "Keep shopping", root_path, class: "btn btn-flat mt-3 w-100" %>
        </div>
        <% end %>
   </div>
</div>

        








<% else  %>
 <h6 class="text-center mt-5">You have no orders yet</h6>

<% end %>
